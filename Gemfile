source 'https://rubygems.org'

gem 'rails', '3.2.3'

# Bundle edge Rails instead:
# gem 'rails', :git => 'git://github.com/rails/rails.git'

gem 'sqlite3'


# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'

  # See https://github.com/sstephenson/execjs#readme for more supported runtimes
  gem 'therubyracer', :platform => :ruby

  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails'

# To use ActiveModel has_secure_password
gem 'bcrypt-ruby', '~> 3.0.0'

# To use Jbuilder templates for JSON
# gem 'jbuilder'

# Use unicorn as the app server
# gem 'unicorn'

# Deploy with Capistrano
gem 'capistrano'

# To use debugger
# gem 'ruby-debug19', :require => 'ruby-debug'

# White Whale gems
# The following set of gems enable almost all type of Web 2.0 UX
# In the easiest way as possible
# With love, Chim

# Geocoder allows a good wrapper for Google Maps services
gem "geocoder", "~> 1.1.1"

# Carrier Wave is an uploader for Rails
gem "carrierwave", "~> 0.6.2"

# Rabl that creates json, bson, xml templates
gem "rabl", "~> 0.6.10"

# Bootstrap-sass enables Twitter Bootstrap with SASS version
gem "bootstrap-sass", "~> 2.0.2"

# client_side_validations does what it says
gem "client_side_validations", "~> 3.1.4"

# simple_form decreases the form creation complexity
gem "simple_form", "~> 2.0.1"

# Omniauth allows creation of social login
gem "omniauth", "~> 1.1.0"

# Split allows A/B Testing directly from the RB code
gem "split", "~> 0.4.1"

# best_in_place enables in-line editing
gem "best_in_place", "~> 1.0.6"

# paper_trail allows versioning of models and the undo/redo things to your app
gem "paper_trail", "~> 2.6.3"

# Delayed_job does what it says. It move tasks to background processes
gem "delayed_job", "~> 3.0.2"

# Prawn allows you to create PDF version of you site
gem "prawn", "~> 0.12.0"

# copycopter_client with copycopter server allows easy I18n and string changes without constant programming
gem "copycopter_client", "~> 2.0.1"

# will_paginate creates pagination to your app easily
gem "will_paginate", "~> 3.0.3"


