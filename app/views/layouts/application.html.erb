<!DOCTYPE html>
<html>
<head>
  <title>White Whale</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<header>

  <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="/">    <%= image_tag "white_whale_logo_big.png", class: "logo"%></a>
          <div class="nav-collapse">
            <ul class="nav">
              <li><%= link_to "Home", root_url %></li>
              <li><%= link_to "New Post", new_post_url if current_user %></li>
            </ul>


            <ul class="nav pull-right">
              <%  unless current_user  %>
                <li><%= link_to "Sign Up", signup_url %></li>
                <li><%= link_to "Login", login_url %></li>
              <% else %>
                <li><%= link_to "Logout", logout_url %></li>
              <% end %>
            </ul>

          </div><!--/.nav-collapse -->
        </div>
      </div>
  </div>


</header>
<!-- END of header and menu parts --> 
<div class="container">
  <% flash.each do |name, msg| %>
    <div class="alert alert_<%= name %>">
      <a class="close" data-dismiss="alert">Ã—</a>
          <%= content_tag :div, msg, class: "alert_#{name}" %>
    </div>
  <% end %>
</div>

<%= yield %>



<!-- START of footer --> 
<footer class="footer"  style="margin-top: 1em;">
  <div class="container">
  <p>
    All rights reserved. White Whale - 2012.
  </p>
  </div>
</footer>
</body>
</html>
